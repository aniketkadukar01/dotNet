@model IEnumerable<ProductsOnline.Models.Product> // Specify the model type

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Image</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.UnitPrice.ToString("C")</td> <!-- Format as currency -->
                <td><img src="@product.ImageUrl" alt="Product Image" style="max-width: 100px; max-height: 100px;" /></td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>

